@model MvcDetallesSeries.Models.Serie

@{
    ViewData["Title"] = "DetallesSerie";
}

<h1>Detalles Serie</h1>

<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            NombreSerie:
        </dt>
        <dd class = "col-sm-10">
            @Model.NombreSerie
        </dd>
        <dt class = "col-sm-2">
            Imagen:
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.Imagen" style="width:500px; height:500px"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Puntuacion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Puntuacion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Año)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Año)
        </dd>
    </dl>
</div>
